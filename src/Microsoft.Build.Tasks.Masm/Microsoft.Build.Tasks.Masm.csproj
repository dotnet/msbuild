<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
    
    <IsPackable>true</IsPackable>
    <Version>1.0.0</Version>
    <Title>Microsoft.Build.Tasks.Masm</Title>
    <Authors>Microsoft</Authors>
    <Description>This package contains precompiled MASM task.</Description>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" VersionOverride="17.14.8" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" VersionOverride="17.14.8" PrivateAssets="all" ExcludeAssets="Runtime" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\Microsoft.Build.Tasks.Masm.props" PackagePath="build\" />
  </ItemGroup>

</Project>
