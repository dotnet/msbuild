<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MSBuildWebPath>$(MSBuildExtensionsPath)\Microsoft\VisualStudio\Managed.Web\</MSBuildWebPath>
    <ActualLangName Condition="Exists('$(MSBuildWebPath)$(LangName)')">$(LangName)</ActualLangName>
    <ActualLangName Condition="'$(ActualLangName)' == ''">en-us</ActualLangName>
  </PropertyGroup>

  <!-- Web project capability that enables web features for .NET core project -->
  <ItemGroup>
    <ProjectCapability Include="DotNetCoreWeb" />
  </ItemGroup>

  <!-- Web specific properties -->
  <ItemGroup>
    <PropertyPageSchema Include="$(MSBuildWebPath)$(ActualLangName)\GeneralBrowseObject.xaml"
                        Condition="Exists('$(MSBuildWebPath)$(ActualLangName)\GeneralBrowseObject.xaml')">
      <Context>BrowseObject</Context>
    </PropertyPageSchema>
  </ItemGroup>

  <!-- Globbing patterns to include relevant files to web projects -->
  
  <!-- Core web globbing patterns -->
  <ItemGroup>
    <Content Include="wwwroot\**">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.cshtml">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\web.config">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Compile Remove="wwwroot\**\*.cs" />
    <EmbeddedResource Remove="wwwroot\**\*.cs" />
  </ItemGroup>

  <!-- Well known web content globbing patterns -->
  <ItemGroup>
    <!-- Scripts and configuration -->
    <Content Include="**\*.json" />
    <Content Include="**\*.js">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.jsx">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.map">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.coffee" />
    <Content Include="**\*.iced" />

    <!-- Markup -->
    <Content Include="**\*.htm">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.html">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.md">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.mdown">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.markdown">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.mdwn">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    
    <!-- Styles -->
    <Content Include="**\*.css">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.less" />
    <Content Include="**\*.sass" />
    
    <!-- Images -->
    <Content Include="**\*.png">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.jpg">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.svg">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="**\*.svgz">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>
</Project>