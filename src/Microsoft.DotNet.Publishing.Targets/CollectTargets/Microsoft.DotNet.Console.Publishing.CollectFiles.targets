<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <WebJobType Condition="'$(WebJobType)' == ''">Continuous</WebJobType>
    <WebJobName Condition="'$(WebJobName)' == ''">$(AssemblyName)</WebJobName>
    <WebJobAppDataPath Condition="'$(WebJobAppDataPath)' == ''" >app_data\Jobs\$(WebJobType)\$(WebJobName)\</WebJobAppDataPath>
    <CollectFilesFromOutDirPrefix Condition="'$(CollectFilesFromOutDirPrefix)' == ''">$(WebJobAppDataPath)</CollectFilesFromOutDirPrefix>
    <CollectFilesFromContentPrefix Condition="'$(CollectFilesFromContentPrefix)' == ''"></CollectFilesFromContentPrefix>
  </PropertyGroup>

  <PropertyGroup>
    <DotNetPublishCollectFiles>
      $(DotNetPublishCollectFiles);
      CollectFilesFromOutDir;
      CollectFilesFromContent;
    </DotNetPublishCollectFiles>
  </PropertyGroup>

  <Import Project="Microsoft.DotNet.Common.Publishing.CollectFiles.targets" Condition="Exists('Microsoft.DotNet.Common.Publishing.CollectFiles.targets')"/>
  
</Project>
